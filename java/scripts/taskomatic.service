[Unit]
Description=Taskomatic
After=postgresql.service local-fs.target cobblerd.service sendmail.service apache2.service
Requires=postgresql.service apache2.service

[Service]
Type=forking
ExecStart=/usr/sbin/taskomatic start
ExecStop=/usr/sbin/taskomatic stop
Restart=on-failure

[Install]
WantedBy=multi-user.target
