.spacewalk-toolbar-h1
  .spacewalk-toolbar
    a(href="/rhn/systems/details/DeleteConfirm.do?sid=#{server.id}" class="btn btn-danger")
        i.fa.fa-trash-o(title='Delete System')
        | #{l.t("Delete System")}
    if inSSM
      a(href="/rhn/systems/details/RemoveFromSSM.do?sid=#{server.id}" class="btn btn-default")
        i.fa.fa-minus-circle(title='Remove from SSM')
        | #{l.t("Remove from SSM")}
    else
      a(href="/rhn/systems/details/AddToSSM.do?sid=#{server.id}" class="btn btn-default")
        i.fa.fa-plus-circle(title='Add to SSM')
        | #{l.t("Add to SSM")}
  h1
    if server.bootstrap
        i.fa.spacewalk-icon-bare-metal
    else if server.virtualGuest
        i.fa.spacewalk-icon-virtual-guest
    else if server.virtualHost
        i.fa.spacewalk-icon-virtual-host
    else
        i.fa.fa-desktop
    | #{" " + server.name + " "}
    a(href="/docs/#{docsLocale}/reference/systems/system-details/sd-details.html", target="_blank")
      i.fa.fa-question-circle.spacewalk-help-link
if h.formulaValueEquals(server, "system-lock", "minion_blackout", "true") and not h.hasSshPushContactMethod(server)
  .alert.alert-warning
    p.
      System is locked. No actions are allowed.

!{tabs}
