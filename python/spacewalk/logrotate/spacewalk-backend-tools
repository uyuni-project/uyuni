# logrotation file for Spacewalk Server
#

/var/log/rhn/activation.log {
    weekly
    rotate 5
    copytruncate
    compress
    notifempty
    missingok
    size=10M
    su root @HTTPD_GROUP@
}

/var/log/rhn/rhn_server_satellite.log {
    weekly
    rotate 5
    copytruncate
    compress
    notifempty
    missingok
    size=10M
    su @HTTPD_USER@ @HTTPD_GROUP@
}

/var/log/rhn/reposync.log {
    weekly
    rotate 5
    copytruncate
    compress
    notifempty
    missingok
    size=10M
    su root @HTTPD_GROUP@
}

/var/log/rhn/reposync/*.log {
    weekly
    rotate 5
    copytruncate
    compress
    delaycompress
    notifempty
    missingok
    size=10M
}
