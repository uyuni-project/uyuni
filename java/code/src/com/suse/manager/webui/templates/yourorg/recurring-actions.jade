    window.csrfToken = "#{csrf_token}";
    window.orgId = "#{orgId}";
    window.orgName = "#{orgName}";
    window.minions = !{minions};
    window.entityType = "#{entityType}";
    window.timezone = "#{h.renderTimezone()}";
