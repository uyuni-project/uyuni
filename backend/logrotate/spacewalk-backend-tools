# logrotation file for Spacewalk Server
#

/var/log/rhn/rhn_server_satellite.log {
    weekly
    rotate 5
    copytruncate
    compress
    notifempty
    missingok
    size=10M
    su wwwrun www
}

/var/log/rhn/reposync/*.log {
    weekly
    rotate 5
    copytruncate
    compress
    notifempty
    missingok
    size=10M
}
