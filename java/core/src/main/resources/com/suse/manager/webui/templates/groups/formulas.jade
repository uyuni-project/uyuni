.spacewalk-toolbar-h1
  .spacewalk-toolbar
    a.btn.btn-danger(href="/rhn/groups/Delete.do?sgid=#{groupId}")
        i.fa.fa-trash-o(title='Delete Group')
        | #{l.t("Delete Group")}
    a.btn.btn-default(href="/rhn/systems/WorkWithGroup.do?sgid=#{groupId}")
        i.fa.spacewalk-icon-system-groups(title='Work With Group')
        | #{l.t("Work With Group")}

  h1
    i.fa.spacewalk-icon-system-groups
    | #{" " + groupName + " "}

!{tabs}

#formulas

script(type='text/javascript').
    window.csrfToken = "#{csrf_token}";

script(type='text/javascript').
    spaImportReactPage('groups/formula/group-formula-selection')
        .then(function(module) {
             module.renderer(
                'formulas',
                {
                    groupId: "#{groupId}",
                    warningMessage: "#{warning}"
                }
             )
        });
