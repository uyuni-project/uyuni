{
  "name": "Uyuni Master Ephemeral",
  "image": "mcr.microsoft.com/devcontainers/base:opensuse-tumbleweed",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {} 
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "postCreateCommand": "bash .devcontainer/setup_uyuni.sh",
  "forwardPorts": [443, 80],
  "hostRequirements": {
    "cpus": 4,
    "memory": "8gb"
  }
}
