<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping
PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="com.redhat.rhn.domain.action.salt.ApplyStatesActionDetails"
      table="rhnActionApplyStates">
    <id name="actionId" type="long" column="action_id">
        <meta attribute="scope-set">protected</meta>
        <generator class="foreign">
            <param name="property">parentAction</param>
        </generator>
    </id>
    <!-- TODO: property name="data" column="data" type="blob" /-->
    <property name="jid" column="jid" type="string" />
    <many-to-one name="parentAction" column="action_id"
        class="com.redhat.rhn.domain.action.Action" outer-join="true"
        not-null="true" insert="false" update="false" />
  </class>
</hibernate-mapping>
