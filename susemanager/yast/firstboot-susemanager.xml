                <module>
                    <label>SUSE Manager</label>
                    <enabled config:type="boolean">true</enabled>
                    <name>susemanager_manager</name>
                </module>
                <module>
                    <label>SUSE Manager: Certificates</label>
                    <enabled config:type="boolean">true</enabled>
                    <name>susemanager_cert</name>
                </module>
                <module>
                    <label>SUSE Manager: Database</label>
                    <enabled config:type="boolean">true</enabled>
                    <name>susemanager_db</name>
                </module>
                <module>
                    <label>SUSE Manager: NCC</label>
                    <enabled config:type="boolean">true</enabled>
                    <name>susemanager_ncc</name>
                </module>
                <module>
                    <label>SUSE Manager: Write Settings</label>
                    <enabled config:type="boolean">true</enabled>
                    <name>susemanager_write</name>
                </module>

-->

                <module>
                    <label>Finish Setup</label>
                    <name>inst_congratulate</name>
                  </module>

            </modules>
        </workflow>
    </workflows>
    <texts>
      <congratulate>
        <label>
          &lt;p&gt;The installation of SUSE Manager has completed successfully.&lt;/p&gt;
          &lt;p&gt;Click Finish to log in to the system and start the SUSE Manager setup.&lt;/p&gt;
          &lt;p&gt;Please visit us at http://www.suse.com/.&lt;/p&gt;
        </label>
      </congratulate>
      	<!--
        	Labels used during Automatic Configuration: use "text_id" from "ac_step"
       	-->
       	<ac_label_1><label>Configuring network...</label></ac_label_1>
      	<ac_label_2><label>Configuring hardware...</label></ac_label_2>
    </texts>
</productDefines>
