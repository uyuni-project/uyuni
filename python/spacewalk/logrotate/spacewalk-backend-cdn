# logrotation file for Spacewalk Server
#

/var/log/rhn/cdnsync.log {
    weekly
    rotate 5
    copytruncate
    compress
    notifempty
    missingok
    size=10M
    su root @HTTPD_GROUP@ 
}

/var/log/rhn/cdnsync/*.log {
    weekly
    rotate 5
    copytruncate
    compress
    delaycompress
    notifempty
    missingok
    size=10M
}
