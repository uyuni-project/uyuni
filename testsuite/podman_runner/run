./06_collect_and_tag_flaky_tests_in_controller.sh
./07_start_server.sh
./08_manager_setup.sh
./09_build_server_code.sh
./10_run_sshminion.sh
./11_setup_sshd.sh
./12_setup_and_run_proxy.sh
./13_run_core_tests.sh
./14_run_salt_sle_minion.sh
./15_run_salt_rhlike_minion.sh
./16_run_salt_deblike_minion.sh
./17_accept_all_keys.sh
