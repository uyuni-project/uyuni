<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping
PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <sql-query name="CustomDataValue.findByServerAndKey">
        <![CDATA[
            SELECT * 
            FROM rhnCustomDataValue c
            WHERE c.server_id = :server
              AND c.key = :key
        ]]>
        <return alias="c" class="com.redhat.rhn.domain.server.CustomDataValue"/>
    </sql-query>
    
    <sql-query name="CustomDataValue.findByKey">
        <![CDATA[
            SELECT * 
            FROM rhnCustomDataValue c
            WHERE c.key = :key
        ]]>
        <return alias="c" class="com.redhat.rhn.domain.server.CustomDataValue"/>
    </sql-query>
</hibernate-mapping>
